<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #bec0c1;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.RegisterApp">
    <children>
    <Label alignment="CENTER" prefHeight="74.0" prefWidth="600.0" style="-fx-background-color: #ff6a41; -fx-background-radius: 0 0 20 20;" text="REGISTER" textFill="WHITE">
        <font>
            <Font name="Bauhaus 93" size="56.0" />
        </font>
    </Label>
        <Pane layoutX="96.0" layoutY="88.0" prefHeight="247.0" prefWidth="423.0" style="-fx-background-color: #AEB0B1; -fx-background-radius: 10;">
            <children>
                <TextField fx:id="usernameField" layoutX="206.0" layoutY="14.0" prefHeight="25.0" prefWidth="196.0" promptText="Username" style="-fx-background-radius: 5;">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </TextField>
                <Button fx:id="loginButton" layoutX="134.0" layoutY="181.0" mnemonicParsing="false" onAction="#openLoginScene" prefHeight="38.0" prefWidth="84.0" style="-fx-background-radius: 20; -fx-background-color: #ff6a41;" text="LOGIN" textFill="WHITE" underline="true">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                    <font>
                        <Font name="Bauhaus 93" size="17.0" />
                    </font>
                </Button>
                <Label alignment="CENTER" layoutX="28.0" layoutY="14.0" prefHeight="25.0" prefWidth="128.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 5;" text="Name" textFill="#ff6a41">
                    <font>
                        <Font name="Bauhaus 93" size="20.0" />
                    </font>
                </Label>
                <PasswordField fx:id="newPasswordField" layoutX="206.0" layoutY="116.0" prefHeight="25.0" prefWidth="196.0" promptText="Set New Password" style="-fx-background-radius: 5;">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </PasswordField>
                <Label alignment="CENTER" layoutX="28.0" layoutY="116.0" prefHeight="25.0" prefWidth="128.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 5;" text="Password" textFill="#ff6a41">
                    <font>
                        <Font name="Bauhaus 93" size="20.0" />
                    </font>
                </Label>
            <Label alignment="CENTER" layoutX="28.0" layoutY="65.0" prefHeight="25.0" prefWidth="128.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 5;" text="Email" textFill="#ff6a41">
               <font>
                  <Font name="Bauhaus 93" size="20.0" />
               </font>
            </Label>
            <TextField fx:id="emailField" layoutX="206.0" layoutY="65.0" prefHeight="25.0" prefWidth="196.0" promptText="Email" style="-fx-background-radius: 5;">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </TextField>
            <Label fx:id="emailValidateLabel" layoutX="218.0" layoutY="90.0" prefHeight="17.0" prefWidth="188.0" text="Please Enter Valid Email address" textFill="#ff6a41" visible="false">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <Label fx:id="passwordValidateLabel" layoutX="176.0" layoutY="141.0" prefHeight="17.0" prefWidth="234.0" text="Password Length must be greater than 8 " textFill="#ff6a41" visible="false">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            </children>
        </Pane>
    </children>

</AnchorPane>
